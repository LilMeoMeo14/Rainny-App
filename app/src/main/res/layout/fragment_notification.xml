<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:text="Tin nhắn"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black" />

    <LinearLayout
        android:id="@+id/layoutSearch"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/txtTitle"
        android:layout_margin="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#DEDDDD"
        android:padding="8dp">

        <ImageView
            android:id="@+id/imgSearch"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_search"
            android:contentDescription="Search icon"
            android:layout_marginEnd="8dp" />

        <EditText
            android:id="@+id/edtSearch"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="Tìm kiếm"
            android:background="@android:color/transparent"
            android:textColor="@android:color/black"
            android:textColorHint="@color/darker_gray"
            android:padding="0dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutTabs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutSearch"
        android:layout_marginStart="16dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnInbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hộp thư"
            android:textColor="@android:color/black"
            android:background="@drawable/tab_button_background" />

        <Button
            android:id="@+id/btnRequests"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Tin nhắn đang chờ"
            android:textColor="@android:color/black"
            android:background="@drawable/tab_button_background" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerMessages"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layoutTabs"
        android:layout_marginTop="8dp"
        android:paddingBottom="60dp"
        android:clipToPadding="false"
        android:scrollbars="vertical" />

</RelativeLayout>
